    <build>

        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
        </testResources>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <mainClass>
                        ma.sqli.peps.PepsApplication
                    </mainClass>
                    <layout>JAR</layout>
                </configuration>
            </plugin>

            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <version>3.4.0</version>
                <configuration>
                    <from>
                        <image>openjdk:17</image>
                    </from>
                    <to>
                        <image>registry.hub.docker.com/zouani/peps</image>
                    </to>
                    <container>
                        <jvmFlags>
                            <jvmFlag>-DtargetJavaVersion=17</jvmFlag>
                            <jvmFlag>-Dgcr.io.username=zouani</jvmFlag>
                            <jvmFlag>-Dgcr.io.password=anaCherif@1987</jvmFlag>
                        </jvmFlags>
                    </container>

                    <extraDirectories>
                        <paths>
                            <path>
                                <from>/Users/HP/.m2/repository/com/mysql/mysql-connector-j/8.0.32</from>
                                <into>/app/libs</into> <!-- The path inside the Docker image where the JAR will be placed -->
                            </path>
                        </paths>
                    </extraDirectories>

                </configuration>
            </plugin>


        </plugins>
    </build>

